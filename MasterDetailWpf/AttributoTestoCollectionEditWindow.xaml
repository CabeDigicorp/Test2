<Window x:Class="MasterDetailWpf.AttributoTestoCollectionEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterDetailWpf"
        mc:Ignorable="d"
        Height="60" Width="250"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Deactivated="Window_Deactivated"
        Background="LightGray"
        ResizeMode="NoResize"
        PreviewKeyDown="Window_PreviewKeyDown"
        >
    <Grid Background="LightGray" Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Etichetta" Grid.Row="0" Grid.Column="0" Margin="3" Height="20"/>
        <TextBox Name="EtichettaTextBox" Grid.Row="0" Grid.Column="1" Margin="3" Height="20"/>
        <TextBlock Text="Valore" Grid.Row="1" Grid.Column="0" Margin="3" Height="20"/>
        <TextBox Name="ValoreTextBox" Grid.Row="1" Grid.Column="1" Margin="3" Height="20"/>
    </Grid>
</Window>
